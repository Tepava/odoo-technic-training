<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- ship -->
        <record model="ir.ui.view" id="mission_view_list">
            <field name="name">space.missions.list</field>
            <field name="model">space.missions</field>
            <field name="arch" type="xml">
                <tree string="Mission List">
                    <field name="name"/>
                    <field name="spaceship_ids"/>
                    <field name="destination"/>
                    <field name="launch_date"/>
                    <field name="return_date"/>
                </tree>
            </field>
        </record>
        
        <record model="ir.ui.view" id="mission_view_form">
            <field name="name">space.missions.form</field>
            <field name="model">space.missions</field>
            <field name="arch" type="xml">
                <form string="Mission Form">
                    <sheet>
                        <h1><field name="name"/></h1>
                        <group>
                            <group string="Ships">
                                <field name="spaceship_ids"/>
                                <field name="destination"/>
                                <field name="travel_distance"/>
                                <field name="fuel_needed"/>
                                
                            </group>
                            <group string="Statut">
                                <field name="launch_date"/>
                                <field name="return_date"/>
                                <field name="ship_status"/>
                                <field name="fuel_ship"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Crew">
                                <field name="crew_member_ids" widget="many2many">
                                    <tree>
                                        <field name="name"/>
                                        <field name="phone"/>
                                        <field name="function"/>
                                        <field name="email"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
    </data>
</odoo>